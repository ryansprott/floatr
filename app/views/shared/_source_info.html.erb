<% @source.ship_name.tap do |ship_name| %>
  <div>
    <h5>
      <%= ship_name %>
    </h5>
  </div>
<% end %>

<% @source.callsign.tap do |callsign| %>
  <div>
    <h5>
      <%= callsign %>
    </h5>
  </div>
<% end %>

<div>
  <h5>
    <%= country_name(@source.mmsi.to_s) %>
    <%= country_flag(@source.mmsi.to_s) %>
  </h5>
</div>

<div>
  <h5>
    <%= @messages.pluck(:category_description).uniq.join(",") %>
  </h5>
</div>

<div>
  <%= link_to(
    "Show on MarineTraffic",
    "https://www.marinetraffic.com/en/ais/details/ships/mmsi:#{@source.mmsi}",
    target: "_blank",
    title: "Show on MarineTraffic",
    class: "btn btn-success",
  ) %>
</div>
