<div
  class="card map-wrapper"
  data-controller="live-maps"
>
  <div class="card-header">
    <div class="row">
      <div class="col-6">
        <a
          class="btn btn-primary"
          data-action="click->live-maps#toggleZoom"
          href="#"
        >
          Toggle zoom
        </a>
      </div>
      <div class="col-6 text-right">
        <a
          class="btn btn-danger"
          data-action="click->live-maps#toggleTable"
          id="table-info"
          href="#"
        >
        </a>
      </div>
    </div>
  </div>

  <div class="card-body map-adjusted">
    <div class="row map-adjusted">
      <div class="col-12 map-adjusted" id="left-column">
        <div
          class="map-adjusted"
          data-action="google-maps-callback@window->live-maps#initMap"
          data-live-maps-target="map"
          data-lat="32.69669"
          data-lon="-117.15301"
        >
        </div>
      </div>
      <div class="col-6 map-adjusted overflow-scroll hidden-column" id="right-column">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Name</th>
              <th>Destination</th>
              <th>Flag</th>
              <th>Distance</th>
              <th>Course</th>
              <th>Speed</th>
            </tr>
          </thead>
          <tbody id="live-summary">
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
