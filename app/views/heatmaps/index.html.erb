<div class="card map-wrapper" data-controller="heatmaps">
  <div class="card-header">
    <div class="row">
      <div class="col-6">
        <h4 class="card-title">
          <%= @source.display_name %>
          <%= @source.country_flag %>
        </h4>
      </div>
      <div class="col-6 text-right">
        <a class="btn btn-primary"
          data-action="click->heatmaps#toggleZoom"
          href="#">
            Toggle zoom
        </a>
      </div>
    </div>
  </div>

  <div class="card-body map-adjusted">
    <div class="map-adjusted"
      data-action="google-maps-callback@window->heatmaps#initMap"
      data-heatmaps-target="map"
      data-lat="32.69669"
      data-lon="-117.15301"
      data-src="<%= @source.id %>">
    </div>
  </div>
</div>
