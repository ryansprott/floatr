<div class="card mt-2">
  <div class="card-header">
    <h2>
      Message data
    </h2>
  </div>
  <div class="card-body">
    <table class="table table-borderless">
      <thead>
        <tr>
          <% @message_headers.each do |header| %>
          <th>
            <%= header %>
          </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @message_rows.each do |row| %>
        <tr>
          <% row.each do |column| %>
          <td>
            <%= column %>
          </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
