<div class="card mt-2 mb-2">
  <div class="card-header">
    <h4>
      MMSI <%= @source.mmsi.to_s %>
    </h4>
  </div>
  <div class="card-body">
    <%= render 'shared/card',
      title: "Message data",
      headers: @message_table.headers("specific"),
      rows: @message_table.rows("specific")
    %>

    <% if @message_table.has_dimensions? %>
    <%= render 'shared/card',
        title: "Dimensions",
        headers: @message_table.headers("dimension"),
        rows: @message_table.rows("dimension")
      %>
    <% end %>
  </div>
</div>
