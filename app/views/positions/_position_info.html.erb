<div class="card mt-4">
  <div class="card-header">
    <h4>
      Positions
    </h4>
  </div>

  <div class="card-body">
    <div class="row mb-2">
      <div class="col-sm-6">
      <% positions.first.tap do |position| %>
        <% if position %>
          <%= render "positions/position_details",
            position: position,
            when_seen: "First"
          %>
        <% end %>
      <% end %>
      </div>

      <div class="col-sm-6">
      <% positions.last.tap do |position| %>
        <% if position %>
          <%= render "positions/position_details",
            position: position,
            when_seen: "Last"
          %>
        <% end %>
      <% end %>
      </div>
    </div>

    <div>
      <%= link_to(
        "Show on map",
        source_heatmaps_path(source),
        class: "btn btn-danger",
      ) %>
    </div>
  </div>
</div>
